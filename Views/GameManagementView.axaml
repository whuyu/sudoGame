<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SudokuGame.Views.GameManagementView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#4CAF50"
                Height="80">
            <TextBlock Text="游戏管理" 
                     FontSize="28" 
                     FontWeight="Bold"
                     Foreground="White"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>
        </Border>

        <ScrollViewer Grid.Row="1"
                      Background="#F5F5F5">
            <StackPanel Margin="20">
                <!-- 创建比赛 -->
                <Border Background="White"
                        Margin="0,0,0,20"
                        CornerRadius="12"
                        BoxShadow="0 4 12 0 #20000000">
                    <StackPanel Margin="25">
                        <TextBlock Text="创建比赛"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#2E7D32"
                                 Margin="0,0,0,20"/>
                        
                        <TextBox Name="ContestTitleTextBox"
                                Watermark="比赛标题"
                                Height="40"
                                CornerRadius="8"
                                Margin="0,0,0,15"/>
                        
                        <TextBox Name="ContestDescriptionTextBox"
                                Watermark="比赛描述"
                                Height="100"
                                AcceptsReturn="True"
                                TextWrapping="Wrap"
                                CornerRadius="8"
                                Margin="0,0,0,15"/>

                        <TextBlock Text="起止时间"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <DatePicker Name="ContestDatePicker"
                                      HorizontalAlignment="Stretch"
                                      Height="40"
                                      CornerRadius="8"/>
                            
                            <TimePicker Name="ContestTimePicker"
                                      Grid.Column="2"
                                      HorizontalAlignment="Stretch"
                                      Height="40"
                                      CornerRadius="8"/>
                        </Grid>

                        <TextBlock Text="比赛时长(分钟)"
                                 FontSize="16"
                                 FontWeight="Bold"
                                 Margin="0,0,0,10" />

                        <NumericUpDown Name="ContestDurationUpDown"
                                     Minimum="30"
                                     Maximum="180"
                                     Value="60"
                                     Increment="30"
                                     Height="40"
                                     Watermark="比赛时长（分钟）"
                                     Margin="0,0,0,15"/>

                        <!-- 新增：题目选择区域 -->
                        <Border Background="#F8F9FA"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="选择比赛题目"
                                         FontWeight="Bold"
                                         Margin="0,0,0,10"/>
                                
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <ComboBox Name="PuzzleDifficultyComboBox"
                                            HorizontalAlignment="Stretch"
                                            Height="35"
                                            CornerRadius="6">
                                        <ComboBoxItem Content="全部难度"/>
                                        <ComboBoxItem Content="简单"/>
                                        <ComboBoxItem Content="中等"/>
                                        <ComboBoxItem Content="困难"/>
                                    </ComboBox>
                                    
                                    <Button Grid.Column="1"
                                            Content="筛选"
                                            Margin="10,0,0,0"
                                            Height="35"
                                            Name="FilterPuzzlesButton"/>
                                </Grid>
                                
                                <ListBox Name="AvailablePuzzlesList"
                                         Height="150"
                                         Background="White"
                                         CornerRadius="6"
                                         Margin="0,0,0,10"/>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Text="已选择题目数：0"
                                             Name="SelectedPuzzlesCount"
                                             VerticalAlignment="Center"/>
                                    
                                    <Button Grid.Column="1"
                                            Content="清空选择"
                                            Name="ClearPuzzleSelectionButton"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <Button Content="创建比赛"
                                HorizontalAlignment="Center"
                                Width="200"
                                Height="45"
                                Name="CreateContestButton"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="Bold"
                                CornerRadius="22"/>
                    </StackPanel>
                </Border>

                <!-- 题目管理 -->
                <Border Background="White"
                        Margin="0,0,0,20"
                        CornerRadius="12"
                        BoxShadow="0 4 12 0 #20000000">
                    <StackPanel Margin="25">
                        <TextBlock Text="题目管理"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#1976D2"
                                 Margin="0,0,0,20"/>
                        
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Name="DifficultyComboBox"
                                     HorizontalAlignment="Stretch"
                                     Height="40"
                                     CornerRadius="8">
                                <ComboBoxItem Content="简单"/>
                                <ComboBoxItem Content="中等"/>
                                <ComboBoxItem Content="困难"/>
                            </ComboBox>
                            
                            <Button Grid.Column="1"
                                    Content="生成新题目"
                                    Height="40"
                                    Margin="10,0,0,0"
                                    Name="GeneratePuzzleButton"
                                    Background="#1976D2"
                                    Foreground="White"
                                    CornerRadius="8"/>
                        </Grid>
                        
                        <ItemsControl Name="PuzzleList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA"
                                            Margin="0,0,0,10"
                                            Padding="15"
                                            CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel>
                                                <TextBlock Text="{Binding Difficulty}"
                                                         FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm}'}"
                                                         Foreground="Gray"
                                                         FontSize="12"/>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1"
                                                    Content="删除"
                                                    Background="#F44336"
                                                    Foreground="White"
                                                    CornerRadius="4"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- 用户管理 -->
                <Border Background="White"
                        CornerRadius="12"
                        BoxShadow="0 4 12 0 #20000000">
                    <StackPanel Margin="25">
                        <TextBlock Text="用户管理"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="#7B1FA2"
                                 Margin="0,0,0,20"/>
                        
                        <ItemsControl Name="UserList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#F8F9FA"
                                            Margin="0,0,0,10"
                                            Padding="15"
                                            CornerRadius="8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel>
                                                <TextBlock Text="{Binding Username}"
                                                         FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding Role}"
                                                         Foreground="Gray"
                                                         FontSize="12"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1"
                                                      Orientation="Horizontal"
                                                      Spacing="10">
                                                <Button Content="修改角色"
                                                        Background="#7B1FA2"
                                                        Foreground="White"
                                                        CornerRadius="4"/>
                                                <Button Content="删除"
                                                        Background="#F44336"
                                                        Foreground="White"
                                                        CornerRadius="4"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl> 