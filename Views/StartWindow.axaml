<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
        x:Class="SudokuGame.Views.StartWindow"
        Title="数独游戏"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        MinWidth="800" MinHeight="600">

    <Grid>
        <!-- 背景网格 -->
        <Canvas Name="BackgroundGrid" />

        <!-- 主要内容 -->
        <StackPanel VerticalAlignment="Center" Spacing="40">
            <!-- 标题 -->
            <TextBlock Text="数独游戏"
                     FontSize="46"
                     FontWeight="Bold"
                     Foreground="#333333"
                     HorizontalAlignment="Center"/>

            <!-- 登录表单 -->
            <StackPanel Name="LoginPanel" Spacing="15" Width="300">
                <TextBox Name="UsernameTextBox"
                         Watermark="用户名"
                         FontSize="16"
                         Padding="10"
                         KeyDown="UsernameTextBox_KeyDown"/>
                <TextBox Name="PasswordTextBox"
                         Watermark="密码"
                         FontSize="16"
                         Padding="10"
                         PasswordChar="●"
                         KeyDown="PasswordTextBox_KeyDown"/>
                <Button Name="LoginButton"
                        Content="登录"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        HorizontalAlignment="Center"
                        Background="#409EFF"
                        Foreground="White"
                        IsDefault="True"/>
                <Button Name="ShowRegisterButton"
                        Content="没有账号？点击注册"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="#409EFF"/>
            </StackPanel>

            <!-- 注册表单 -->
            <StackPanel Name="RegisterPanel" Spacing="15" Width="300" IsVisible="False">
                <TextBox Name="RegisterUsernameTextBox"
                         Watermark="用户名"
                         FontSize="16"
                         Padding="10"/>
                <TextBox Name="RegisterPasswordTextBox"
                         Watermark="密码"
                         FontSize="16"
                         Padding="10"
                         PasswordChar="●"/>
                <TextBox Name="ConfirmPasswordTextBox"
                         Watermark="确认密码"
                         FontSize="16"
                         Padding="10"
                         PasswordChar="●"/>
                <Button Name="RegisterButton"
                        Content="注册"
                        FontSize="18"
                        FontWeight="Bold"
                        Padding="30,15"
                        HorizontalAlignment="Center"
                        Background="#409EFF"
                        Foreground="White"/>
                <Button Name="ShowLoginButton"
                        Content="已有账号？点击登录"
                        FontSize="14"
                        Background="Transparent"
                        Foreground="#409EFF"/>
            </StackPanel>

            <!-- 开始游戏按钮（初始隐藏） -->
            <Button Name="StartButton"
                    Content="开始游戏"
                    FontSize="18"
                    FontWeight="Bold"
                    Padding="30,15"
                    HorizontalAlignment="Center"
                    Background="#409EFF"
                    Foreground="White"
                    IsVisible="False">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#3A8EE6"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#337ECC"/>
                    </Style>
                </Button.Styles>
            </Button>

            <!-- 版权信息 -->
            <TextBlock Text="© 2025 数独游戏"
                     FontSize="12"
                     Foreground="#999999"
                     HorizontalAlignment="Center"
                     Margin="0,100,0,0"/>
        </StackPanel>
    </Grid>
</Window> 