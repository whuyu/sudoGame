<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="800"
        x:Class="SudokuGame.Views.StartWindow"
        Title="数独游戏"
        WindowStartupLocation="CenterScreen"
        Background="#F0F0F0"
        MinWidth="800" MinHeight="600">

    <Grid>
        <!-- 背景网格 -->
        <Canvas Name="BackgroundGrid" />

        <!-- 主要内容 -->
        <StackPanel VerticalAlignment="Center" Spacing="40">
            <!-- 标题 -->
            <TextBlock Text="数独游戏"
                     FontSize="46"
                     FontWeight="Bold"
                     Foreground="#333333"
                     HorizontalAlignment="Center"/>

            <!-- 开始按钮 -->
            <Button Name="StartButton"
                    Content="开始游戏"
                    FontSize="18"
                    FontWeight="Bold"
                    Padding="30,15"
                    HorizontalAlignment="Center"
                    Background="#409EFF"
                    Foreground="White">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#3A8EE6"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#337ECC"/>
                    </Style>
                </Button.Styles>
            </Button>

            <!-- 版权信息 -->
            <TextBlock Text="© 2024 数独游戏"
                     FontSize="12"
                     Foreground="#999999"
                     HorizontalAlignment="Center"
                     Margin="0,100,0,0"/>
        </StackPanel>
    </Grid>
</Window> 