<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SudokuGame.Views.ContestView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="ContestTitle"
                 Text="比赛标题"
                 FontSize="24"
                 FontWeight="Bold"
                 HorizontalAlignment="Center"
                 Margin="0,20,0,20"/>

        <Grid Grid.Row="1" Margin="20,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock x:Name="ContestDescription"
                         Text="比赛描述"
                         Margin="0,0,0,10"/>
                <TextBlock x:Name="ContestTime"
                         Text="剩余时间：00:00:00"/>
            </StackPanel>

            <Button Grid.Column="1"
                    Content="返回列表"
                    Click="BackToList_Click"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 题目列表 -->
            <Border Grid.Column="0"
                    Background="White"
                    Margin="20"
                    CornerRadius="8"
                    BoxShadow="0 2 10 0 #15000000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="题目列表"
                             FontSize="18"
                             FontWeight="Bold"
                             Margin="20,20,20,10"/>

                    <ScrollViewer Grid.Row="1">
                        <ItemsControl x:Name="PuzzleList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Margin="10"
                                            Click="Puzzle_Click">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Title}"
                                                     FontWeight="Bold"/>
                                            <TextBlock Text="{Binding Status}"
                                                     Foreground="Gray"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- 排行榜 -->
            <Border Grid.Column="1"
                    Background="White"
                    Margin="20"
                    CornerRadius="8"
                    BoxShadow="0 2 10 0 #15000000">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="排行榜"
                             FontSize="18"
                             FontWeight="Bold"
                             Margin="20,20,20,10"/>

                    <ScrollViewer Grid.Row="1">
                        <StackPanel>
                            <!-- 列标题 -->
                            <Grid Margin="20,10" Background="#F5F7FA">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="排名"
                                         FontWeight="Bold"
                                         Margin="0,0,20,0"/>
                                <TextBlock Grid.Column="1"
                                         Text="用户名"
                                         FontWeight="Bold"/>
                                <TextBlock Grid.Column="2"
                                         Text="完成题数"
                                         FontWeight="Bold"
                                         Margin="20,0"/>
                                <TextBlock Grid.Column="3"
                                         Text="用时"
                                         FontWeight="Bold"
                                         Margin="0,0,20,0"/>
                                <TextBlock Grid.Column="4"
                                         Text="加入时间"
                                         FontWeight="Bold"/>
                            </Grid>

                            <ItemsControl x:Name="LeaderboardList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="20,10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="{Binding Rank}"
                                                     FontWeight="Bold"
                                                     Margin="0,0,20,0"/>
                                            <TextBlock Grid.Column="1"
                                                     Text="{Binding Username}"/>
                                            <TextBlock Grid.Column="2"
                                                     Text="{Binding CompletedPuzzles}"
                                                     Margin="20,0"/>
                                            <TextBlock Grid.Column="3"
                                                     Text="{Binding TotalTimeStr}"
                                                     Margin="0,0,20,0"/>
                                            <TextBlock Grid.Column="4"
                                                     Text="{Binding JoinTimeStr}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl> 